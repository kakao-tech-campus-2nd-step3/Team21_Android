<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Everymoment" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="switchStyle">@style/notificationToggleStyle</item>
    </style>

    <style name="SpinnerMode" parent="android:Widget.Material.DatePicker">
        <item name="android:datePickerMode">spinner</item>
        <item name="android:calendarViewShown">false</item>
    </style>

    <style name="CustomDatePicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:buttonBarPositiveButtonStyle">@style/MyDatePickerButtonStyle</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/MyDatePickerButtonStyle</item>
        <item name="android:colorControlNormal">@color/primary_color2</item>
        <item name="android:datePickerStyle">@style/SpinnerMode</item>
        <item name="android:textColorPrimary">@color/primary_color</item>
    </style>

    <style name="MyDatePickerButtonStyle" parent="android:Widget.Material.Button.Borderless">
        <item name="android:textColor">@color/primary_color</item>
    </style>

    <style name="Theme.Everymoment" parent="Base.Theme.Everymoment" />
</resources>